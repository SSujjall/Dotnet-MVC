@model MVC.Models.Entities.UserLogin

@{
    var googleUser = ViewBag.GoogleUser as MVC.Models.Entities.UserLogin;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="login-form border rounded p-4">
                <div class="text-center mb-4">
                    <h2>Enter Password</h2>
                </div>

                <form asp-action="AskPassword" method="post">
                    <input type="hidden" asp-for="Username" value="@googleUser.Username" />
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-2">Continue</button>
                </form>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info mt-3 text-center">@TempData["Message"]</div>
                }
            </div>
        </div>
    </div>
</div>
