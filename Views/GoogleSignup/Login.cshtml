@model MVC.Models.Entities.UserLogin

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="login-form border rounded p-4">
                <div class="text-center mb-4">
                    <h2>Login (Signup With Google)</h2>
                </div>

                <form asp-action="UserLogin" method="post">
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>
                    <button type="submit" class="btn btn-success btn-block mt-2">Login</button>
                </form>

                <hr />

                <div class="text-center">
                    <a href="@Url.Action("GoogleLogin", "GoogleSignup")" class="btn btn-outline-primary btn-block">
                        <i class="fab fa-google" style="margin-right: 8px;"></i> Signup with Google
                    </a>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info mt-3 text-center">@TempData["Message"]</div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .login-form {
        background-color: #f9f9f9;
        min-width: 400px;
        text-align: center;
    }

    .btn {
        width: 100%;
    }
</style>

<!-- Add this to include Google Fonts icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
